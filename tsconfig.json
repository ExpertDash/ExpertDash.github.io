{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES6",
		"rootDir": "src",
		"outDir": "js",
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": false
	},
	"include": [
		"src/**/*"
	]
}